#include <iostream>

using namespace std;

int main() {
  int num;
  cout << "Enter a number: ";
  cin >> num;

  if (num % 2 == 0) {
    cout << num << " is even" << endl;
  } else {
    cout << num << " is odd" << endl;
  }

  return 0;
}
//
#include <iostream>

using namespace std;

int main() {
  int num1, num2;
  cout << "Enter two numbers to swap: ";
  cin >> num1 >> num2;

  cout << "Before swapping: num1 = " << num1 << ", num2 = " << num2 << endl;

  num1 = num1 + num2;
  num2 = num1 - num2;
  num1 = num1 - num2;

  cout << "After swapping: num1 = " << num1 << ", num2 = " << num2 << endl;

  return 0;
}
